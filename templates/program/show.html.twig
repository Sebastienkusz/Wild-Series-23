{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <div>
                    <h2>{{ loop.index }} / Saison n° {{ season.number }} - Année : {{ season.year }}</h2>
                    {# Lien vers la fiche de la série : #}
                    <a href="{{ path("program_season_show", { "program_slug": program.slug, "season_number": season.number }) }}" class="text-secondary">Voir la saison</a>
                </div>
                <strong>Acteurs :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li>{{ actor.name }} -
                            <a href="{{ path('actor_show', {'id': actor.id}) }}">lien de l'acteur</a>
                        </li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}
