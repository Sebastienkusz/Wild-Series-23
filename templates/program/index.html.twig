{# templates/program/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Search</button>
    {{ form_end(form) }}

    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { program_slug: program.slug }) }}" class="text-secondary">Voir la fiche</a>
            {% if is_granted("ROLE_ADMIN") %}
            -
            <a href="{{ path("program_edit", { program_slug: program.slug }) }}" class="text-secondary">Modifier la fiche</a>
            {% endif %}
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    {{ app.session.get('total') }}
{% endblock %}
